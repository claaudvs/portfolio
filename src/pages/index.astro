---
import PortfolioLayout from "../layouts/PortfolioLayout.astro";
import ImageStripe from "../components/ImageStripe.astro";
import RightNav from "../components/shared/RightNav.astro";
import { projects } from "../data/projects";
import ClockIsland from "../components/clockIsland";
import SkillList from "../components/skills/SkillList.astro";
---
<PortfolioLayout>
  <section slot="left" class="lg:col-span-4 flex flex-col justify-between py-10">
    <div>
      <h1 class="leading-none tracking-tight font-extrabold text-[14vw] lg:text-[88px]">
        <span class="block">CLAUDIO</span><span class="block">v.s.</span>
      </h1>
      <div class="mt-10">
        <SkillList/>
      </div>
    
    </div>
    <ClockIsland client:idle />
  </section>

  <main slot="center" class="lg:col-span-5 py-10">
    <div class="flex flex-col gap-6">
      {projects.map((project) => <ImageStripe id={project.id} src={`${project.image}`} />)}
    </div>
  </main>

  <aside slot="right" class="lg:col-span-3 py-10 flex flex-col justify-between">
    <div class="flex justify-end"><RightNav /></div>
    <div class="text-right text-[10px] text-neutral-600">FRONTEND DEV</div>
  </aside>
</PortfolioLayout>
